<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AlgoritmosController">
   <children>
      <Button fx:id="btVoltar" layoutX="658.0" layoutY="17.0" mnemonicParsing="false" onAction="#voltarTela" text="←">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font></Button>
      <Button fx:id="btResultado" layoutX="64.0" layoutY="204.0" mnemonicParsing="false" onAction="#gerarResultado" text="Gerar resultados">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font></Button>
      <Label fx:id="lbSelecionarAlgoritmos" layoutX="23.0" layoutY="60.0" text="Selecionar algoritmos:">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font></Label>
      <CheckBox fx:id="cbCosine" layoutX="23.0" layoutY="85.0" mnemonicParsing="false" text="Cosine">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font></CheckBox>
      <CheckBox fx:id="cbTrigram" layoutX="23.0" layoutY="110.0" mnemonicParsing="false" text="Trigram">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font></CheckBox>
      <CheckBox fx:id="cbLevenshtein" layoutX="23.0" layoutY="135.0" mnemonicParsing="false" text="Levenshtein">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font></CheckBox>
      <CheckBox fx:id="cbJaroWinkler" layoutX="23.0" layoutY="162.0" mnemonicParsing="false" text="JaroWinkler">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font></CheckBox>
      <Button fx:id="btImportar" layoutX="525.0" layoutY="17.0" mnemonicParsing="false" onAction="#exportarResultados" text="Exportar resultados">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font></Button>
      <BarChart fx:id="bcGrafico" layoutX="232.0" layoutY="50.0" prefHeight="427.0" prefWidth="445.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
   </children>
</AnchorPane>
